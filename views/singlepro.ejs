<script>

document.addEventListener('DOMContentLoaded', function () {
    const addToCartForm = document.getElementById('addToCartForm');
    const successMessage = document.getElementById('successMessage');
    const addReviewForm = document.getElementById('addReviewForm');

    addToCartForm.addEventListener('submit', async function (event) {
        event.preventDefault();

        const quantity = document.getElementById('quantity').value;

        try {
            const response = await fetch(addToCartForm.action, {
                method: addToCartForm.method,
                body: new URLSearchParams({ quantity }),
            });

            if (response.ok) {
                const result = await response.json();
                if (result.success) {
                    successMessage.innerText = 'Product added to cart successfully!';
                    successMessage.classList.add('blink');
                    successMessage.style.display = 'block';
                } else {
                    console.error('Failed to add product to cart:', result.message);
                }
            } else {
                console.error('Failed to add product to cart');
            }
        } catch (error) {
            console.error('Error during fetch:', error);
        }
    });

    if (addReviewForm) {
        addReviewForm.addEventListener('submit', async function (event) {
            event.preventDefault();

            const userIdElement = document.getElementById('userId');
            const ratingElement = document.getElementById('reviewRating');
            const textElement = document.getElementById('reviewText');
            const reviewIdElement = document.getElementById('reviewId');

            // Check if the elements exist before accessing their values
            const userId = userIdElement ? userIdElement.value : null;
            const rating = ratingElement ? ratingElement.value : null;
            const text = textElement ? textElement.value : null;
            const reviewId = reviewIdElement ? reviewIdElement.value : null;

            try {
                const response = await fetch(addReviewForm.action, {
                    method: addReviewForm.method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ userId, rating, text, reviewId }),
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    console.error('Failed to add/edit review:', response.statusText);
                }
            } catch (error) {
                console.error('Error during fetch:', error);
            }
        });
    }

    const reviewsContainer = document.querySelector('.reviews-container');

    if (reviewsContainer) {
        const reviews = reviewsContainer.querySelectorAll('.review');

        reviews.forEach((review) => {
            const starRating = review.querySelector('.star-rating');
            const ratingValue = parseInt(review.getAttribute('data-rating'));

            starRating.innerHTML = '';

            for (let i = 1; i <= 5; i++) {
                const starIcon = document.createElement('i');
                starIcon.classList.add('fas', 'fa-star', i <= ratingValue ? 'active' : 'inactive');
                starRating.appendChild(starIcon);
            }

            // Add event listener for delete review button
            const deleteBtn = review.querySelector('.delete-review-btn');
            if (deleteBtn) {
                deleteBtn.addEventListener('click', async () => {
                    const reviewId = deleteBtn.getAttribute('data-review-id');
                    if (confirm('Are you sure you want to delete this review?')) {
                        // Perform delete action (you can use fetch or other AJAX methods)
                        try {
                            const response = await fetch(`/delete-review/${reviewId}`, {
                                method: 'DELETE',
                            });

                            if (response.ok) {
                                // Refresh the page or update the reviews container
                                window.location.reload();
                            } else {
                                console.error('Failed to delete review:', response.statusText);
                            }
                        } catch (error) {
                            console.error('Error during fetch:', error);
                        }
                    }
                });
            }
        });
    }
});
</script>





  


