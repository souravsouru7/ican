<!-- product-details.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>

    <!-- Link to a CSS file for styling (create a new CSS file if you don't have one) -->
    <link rel="stylesheet" href="/styles/product-details.css">

    <!-- Add any necessary styling -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
            color: #333;
        }

        h1 {
            color: #e44d26; /* Amazon's orange color */
            text-align: center;
            padding: 20px;
            background-color: #fff;
            margin: 0;
        }

        /* Container for product details */
        .product-container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            background-color: #f5f5f5; /* Subtle gray background */
        }

        /* Product image */
        .product-image {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Product title */
        .product-title {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
            font-weight: bold; /* Added font-weight for bold text */
        }

        /* Product category and other details */
        .product-details {
            color: #666;
            margin-bottom: 20px;
            font-weight: bold; /* Added font-weight for bold text */
        }

        /* Product price */
        .product-price {
            font-size: 24px;
            color: #e44d26; /* Amazon's orange color */
            margin-bottom: 10px;
            font-weight: bold; /* Added font-weight for bold text */
        }

        /* Add more styling as needed */
    </style>
</head>

<body>
    <h1>Product Details</h1>

    <!-- Display product details here -->
    <div class="product-container">
        <img class="product-image" src="/uploads/<%= order.products[0].product.productImage %>"
            alt="<%= order.products[0].product.productName %>">
        <h2 class="product-title"><%= order.products[0].product.productName %></h2>
        <p class="product-details">Category: <%= order.products[0].product.category.name %></p>
        <p class="product-details">Regular Price: <%= order.products[0].product.regularPrice %></p>
        <p class="product-details">Sales Price: <%= order.products[0].product.salesPrice %></p>
        <p class="product-details">Stock Status: <%= order.products[0].product.stockStatus %></p>
        <p class="product-details">Quantity: <%= order.products[0].product.quantity %></p>
        <p class="product-details">Shirt Size: <%= order.products[0].product.shirtSize %></p>
        <!-- Add more product details as needed -->

      
    </div>
</body>
 
</html>
