<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="/styles/product-list.css">
    <style>
/* Inside the product-list.css file */
.pagination {
    margin-top: 20px;
    display: flex;
    justify-content: center;
}

.pagination a {
    padding: 8px;
    margin: 0 5px;
    text-decoration: none;
    color: #3498db;
    border: 1px solid #3498db;
    border-radius: 4px;
}

.pagination a.active {
    background-color: #3498db;
    color: #fff;
}

    </style>
</head>
<%- include("adminheader.ejs") %>
<body>
    <h1>Product List</h1>

    <% if (products.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Regular Price</th>
                    <th>Stock Status</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><strong><%= product.productName %></strong></td>
                        <td><img src="/uploads/<%= product.productImage %>" alt="<%= product.productName %> Image"></td>
                        <td><%= product.category.name %></td>
                        <td><%= product.regularPrice %></td>
                        
                        <td><%= product.stockStatus %></td>
                        <td><%= product.quantity %> <%= product.units %></td>
                        <td class="btn-container">
                            <a href="/admin/dashboard/edit-product/<%= product._id %>" class="btn-edit">Edit</a>
                            <a href="/admin/dashboard/delete-product/<%= product._id %>" class="btn-delete">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p class="no-products">No products available.</p>
    <% } %>

    <a href="/admin/dashboard/add-product" class="add-product-link">Add Product</a>
    <!-- Inside the <body> tag of views/product-list.ejs -->
<div class="pagination">
    <% for(let i = 1; i <= totalPages; i++) { %>
        <a href="/admin/dashboard/product-list?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
            <%= i %>
        </a>
    <% } %>
</div>

</body>
</html>
